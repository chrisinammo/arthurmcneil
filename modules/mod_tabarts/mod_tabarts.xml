                        <option value="2">Slides (verticaly)</option>
                </param>
                <param name="animationSpeed" type="text" default="1000" size="20" label="Animation speed" description="Set how long will be animation transition. In ms."/>
                <param name="animationInterval" type="text" default="5000" size="20" label="Animation interval" description="Set how long will be stay animation. In ms."/>
                <param name="animationFun" type="list" default="33" label="Animation transition" description="Select type of module animation transition">
