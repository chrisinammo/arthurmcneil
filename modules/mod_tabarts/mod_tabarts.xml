                        <option value="30">Circ.easeIn</option>
                        <option value="31">Circ.easeOut</option>
                        <option value="32">Circ.easeInOut</option>
                        <option value="33">Sine.easeIn</option>
                        <option value="34">Sine.easeOut</option>
