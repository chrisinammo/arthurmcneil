	<params>
		<param name="catid" type="category" default="0" label="Category" description="A content category which items are used for the YOOcarousel" />
		<param name="style" type="list" default="default" label="Style" description="The YOOcarousel styling">
			<option value="default">Default</option>
			<option value="basic">Basic</option>
			<option value="slideshow">Slideshow</option>
			<option value="list">List</option>
			<option value="basiclist">Basic List</option>
		</param>
		<param name="module_width" type="text" default="400" label="Module width (px)" description="Width of the whole module" />
		<param name="module_height" type="text" default="200" label="Module height (px)" description="Height of the whole module" />
		<param name="autoplay" type="list" default="on" label="Autoplay" description="Changing between items automatically">
			<option value="on">On</option>
			<option value="once">Only once</option>
			<option value="off">Off</option>
		</param>
		<param name="slide_interval" type="text" default="10000" label="Slide interval (ms)" description="Time interval of changing between items when autoplay on in milliseconds" />
		<param name="transition_duration" type="text" default="700" label="Transition duration (ms)" description="Time interval of the transition effect when autoplay is on in milliseconds" />
		<param name="transition_effect" type="list" default="scroll" label="Transition effect" description="Define the transition effect for the autoplay">
			<option value="scroll">Scroll</option>
			<option value="fade">Fade</option>
		</param>
		<param name="control_panel" type="list" default="top" label="Control panel" description="Hide/Position the control panel">
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
			<option value="left">Left</option>
			<option value="none">None</option>
		</param>
		<param name="rotate_action" type="list" default="click" label="Rotate action" description="Action behavior of the control panel">
			<option value="click">Click</option>
			<option value="mouseover">Mouse over</option>
			<option value="none">None</option>
		</param>
		<param name="rotate_duration" type="text" default="200" label="Rotate duration (ms)" description="Time interval of the transition effect when a action of the control panel is triggered in milliseconds" />
		<param name="rotate_effect" type="list" default="scroll" label="Rotate effect" description="Define the transition effect when a action of the control panel is triggered">
			<option value="scroll">Scroll</option>
			<option value="fade">Fade</option>
		</param>
		<param name="buttons" type="list" default="1" label="Buttons" description="Hide/Show the next and previous buttons">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="order" type="list" default="o_asc" label="Ordering" description="Ordering options">
			<option value="o_asc">Article Order</option>
			<option value="c_dsc">Recently Added First</option>
			<option value="m_dsc">Recently Modified First</option>
			<option value="h_dsc">Most Popular</option>			
			<option value="rnd">Randomize</option>
	  	</param>
		<param name="readmore" type="list" default="0" label="Read More" description="Show/Hide the Read More button">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="items" type="text" default="4" label="No. of Items" description="Maximum no of items to display" />
		<param name="moduleclass_sfx" type="text" default="-blank" label="Module Class Suffix" description="Module Class Suffix" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
