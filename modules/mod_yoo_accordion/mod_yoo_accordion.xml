<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>YOOaccordion</name>
	<author>YOOtheme</author>
	<creationDate>February 2008</creationDate>
	<copyright>Copyright (C) 2007 - 2008 YOOtheme Ltd. &amp; Co. KG</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>info@yootheme.com</authorEmail>
	<authorUrl>http://www.yootheme.com</authorUrl>
	<version>1.5.5</version>
	<description>YOOaccordion module of the YOOtheme club (http://www.yootheme.com) for Joomla! 1.5. Requires mootools 1.1</description>
	<files>
		<filename module="mod_yoo_accordion">mod_yoo_accordion.php</filename>
		<filename>mod_yoo_accordion.css.php</filename>
		<filename>mod_yoo_accordion.js</filename>
		<filename>mod_yoo_accordion.xml</filename>
		<filename>helper.php</filename>
		<filename>changelog.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/_item.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/watermark.php</filename>
		<filename>tmpl/whitespace.php</filename>
		<filename>styles/default/images/index.html</filename>
		<filename>styles/default/images/item_header.png</filename>
		<filename>styles/default/index.html</filename>
		<filename>styles/default/style.css</filename>
		<filename>styles/index.html</filename>
		<filename>styles/style.css</filename>
		<filename>styles/watermark/images/index.html</filename>
		<filename>styles/watermark/images/item_header.png</filename>
		<filename>styles/watermark/images/watermark.png</filename>
		<filename>styles/watermark/index.html</filename>
		<filename>styles/watermark/style.css</filename>
		<filename>styles/whitespace/images/index.html</filename>
		<filename>styles/whitespace/images/item_header_l.png</filename>
		<filename>styles/whitespace/images/item_header_m.png</filename>
		<filename>styles/whitespace/images/item_header_r.png</filename>
		<filename>styles/whitespace/index.html</filename>
		<filename>styles/whitespace/style.css</filename>		
	</files>
	<params>
		<param name="catid" type="category" default="0" label="Category" description="A content category which items are used for the YOOaccordion" />
		<param name="style" type="list" default="default" label="Style" description="The YOOaccordion styling">
			<option value="default">Default</option>
			<option value="watermark">Watermark</option>
			<option value="whitespace">Whitespace</option>
		</param>
		<param name="multiple_open" type="radio" default="0" label="Allow multiple open" description="Allow multiple open items">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="open_all" type="radio" default="0" label="Open all items" description="Open all items on startup">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="order" type="list" default="o_asc" label="Ordering" description="Ordering options">
			<option value="o_asc">Article Order</option>
			<option value="c_dsc">Recently Added First</option>
			<option value="m_dsc">Recently Modified First</option>
			<option value="h_dsc">Most Popular</option>			
			<option value="rnd">Randomize</option>
	  	</param>
		<param name="readmore" type="list" default="0" label="Read More" description="Show/Hide the Read More button">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="items" type="text" default="4" label="No. of Items" description="Maximum no of items to display" />
		<param name="moduleclass_sfx" type="text" default="-blank" label="Module Class Suffix" description="Module Class Suffix" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
