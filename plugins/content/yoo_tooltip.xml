	<params>
		<param name="style" type="list" default="default" label="Style" description="The YOOtooltip styling">
			<option value="default">Default</option>
		</param>
		<param name="mode" type="list" default="cursor" label="Default mode" description="The Tooltip default mode, defines where the Tooltip is displayed">
			<option value="cursor">Display at cursor position</option>
			<option value="trigger">Display above related trigger element</option>
		</param>
		<param name="width" type="text" default="250" label="Default Width (px)" description="Default Tooltip width in pixel, used when it is not set as Tooltip parameter" />
		<param name="sticky" type="radio" default="0" label="Sticky" description="Tooltip will stay open until close button is hovered">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>		
	</params>
