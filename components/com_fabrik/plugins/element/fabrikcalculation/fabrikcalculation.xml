<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element">
	<name>Fabrik Calculation</name>
	<author>Rob Clayburn</author>
	<creationDate>Feb 2007</creationDate>
	<copyright>(C) 2005-2007 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.0</version>
	<description>Performs calculations on result data, use {name} to access result data</description>
	<files>
		<filename fabrikplugin="fabrikcalculation">fabrikcalculation.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="administrator/language" >
		<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fabrikcalculation.ini</language>
	</languages>
	
	<params>
		<param name="calculation" type="textarea" cols="60" rows="10" default="" label="CALCULATION" description="CALCULATION_DESC"/>
	</params>
</install>