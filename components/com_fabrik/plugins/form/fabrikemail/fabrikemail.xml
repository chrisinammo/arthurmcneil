<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="form">
	<name>Email</name>
	<author>Rob Clayburn</author>
	<creationDate>March 2007</creationDate>
	<copyright>(C) 2005-2007 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.0</version>
	<description>Performs email tasks on form submission</description>
	<files>
		<filename fabrikplugin="fabrikEmail">fabrikEmail.php</filename>
		<filename>index.html</filename>
	</files>
	<params repeat="1"  repeatcontrols="0">
		<param name="email_to" type="text" size="30" default="" label="EMAILTO" description="EMAILTODESC"/>
		<param name="email_from" type="text" size="30" default="" label="EMAILFROM" description="EMAILFROMDESC"/>
		<param name="email_subject" type="text" size="30" default="" label="EMAILSUBJECT" description="EMAILSUBJECTDESC"/>
		<param name="email_template" type="filelist" directory="components/com_fabrik/plugins/form/fabrikemail/tmpl/" hide_default="1" label="EMAILTEMPLATE" description="EMAILTEMPLATEDESC"/>
	</params>
</install>